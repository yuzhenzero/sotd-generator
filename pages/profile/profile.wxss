/* profile.wxss */
.container {
  padding: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
  text-align: center;
}

.menu-list {
  width: 100%;
}

.menu-section {
  margin-bottom: 20px;
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.section-title {
  padding: 10px 15px;
  font-size: 14px;
  color: #999;
  background-color: #f8f8f8;
}

.menu-item {
  padding: 15px;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  font-size: 15px;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item text {
  flex: 1;
}

.icon-arrow {
  font-size: 16px;
  color: #999;
  margin-left: 8px;
}
