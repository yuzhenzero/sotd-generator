/* item-list.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
  position: relative;
}

.content {
  flex: 1;
  padding: 12px;
  overflow-y: auto;
}

.header {
  padding: 12px 12px 0;
  margin-bottom: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
  text-align: center;
}

.bottom-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 6px;
  align-items: center;
  padding: 12px;
  background: #fff;
  border-top: 1px solid #eee;
}

.add-input {
  flex: 1;
  min-width: 0;
  height: 40px;
  background: #f8f8f8;
  border-radius: 8px;
  padding: 0 15px;
  font-size: 15px;
  border: 1px solid #eee;
}

.add-btn {
  width: 50px;
  height: 36px;
  background: #07c160;
  color: #fff;
  font-size: 14px;
  border-radius: 6px;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0; /* 防止按钮被压缩 */
}

.item-list {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.item-wrapper {
  width: 100%;
  height: 52px;
  background: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.item-wrapper:last-child {
  border-bottom: none;
}

.movable-area {
  width: 100%;
  height: 100%;
}

.movable-view {
  width: calc(100% + 80px);
  height: 100%;
  display: flex;
  align-items: stretch;
}

.item {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 10px 12px;
  background: #fff;
  transition: background-color 0.3s;
}

.item:active {
  background: #f9f9f9;
}

.item:last-child {
  border-bottom: none;
}

.checkbox {
  width: 20px;
  height: 20px;
  border: 2px solid #ddd;
  border-radius: 4px;
  margin-right: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  flex-shrink: 0;
}

.checkbox.checked {
  background: #07c160;
  border-color: #07c160;
}

.checkbox-inner {
  color: white;
  font-size: 14px;
  transform: scale(0.8);
}

.item-name {
  flex: 1;
  font-size: 15px;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.delete-btn {
  width: 80px;
  height: 100%;
  background-color: #ff4d4f;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}

.delete-icon {
  font-size: 24px;
  color: #ff6b6b;
  font-weight: bold;
}

.empty-state {
  padding: 30px;
  text-align: center;
  color: #999;
  font-size: 14px;
}
